diff --git a/Makefile b/Makefile
index 7b874c2..68de29e 100644
--- a/Makefile
+++ b/Makefile
@@ -23,28 +23,21 @@ ifeq ($(COMPILE_PLATFORM),mingw32)
   endif
 endif

-BUILD_CLIENT     = 1
-BUILD_SERVER     = 1
-
-USE_SDL          = 1
-USE_CURL         = 1
-USE_LOCAL_HEADERS= 0
-USE_VULKAN       = 1
-USE_OPENGL       = 1
-USE_OPENGL2      = 0
-USE_SYSTEM_JPEG  = 0
-USE_VULKAN_API   = 1
-
-USE_RENDERER_DLOPEN = 1
-
-CNAME            = quake3e
-DNAME            = quake3e.ded
-
-RENDERER_PREFIX  = $(CNAME)
-
-# valid options: opengl, vulkan, opengl2
-RENDERER_DEFAULT = opengl
-
+BUILD_CLIENT        = 1
+BUILD_SERVER        = 1
+USE_SDL             = 0
+USE_CURL            = 1
+USE_LOCAL_HEADERS   = 0
+USE_VULKAN          = 1
+USE_OPENGL          = 1
+USE_OPENGL2         = 1
+USE_SYSTEM_JPEG     = 0
+USE_VULKAN_API      = 1
+USE_RENDERER_DLOPEN = 0
+CNAME               = quake3e
+DNAME               = quake3e.ded
+RENDERER_PREFIX     = $(CNAME)
